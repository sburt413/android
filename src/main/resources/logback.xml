<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <root level="warn">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="com.hydrangea" level="info" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>

    <logger name="com.hydrangea.music.tagger" level="debug" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>


</configuration>
